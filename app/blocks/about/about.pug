    section#about.about(class = data.class role = data.role)
        .about__container.container
            .row
                .col-lg-6.px-0.col-md-12
                    .about-container
                        .swiper-container
                            .swiper-wrapper
                                .swiper-slide
                                    .swiper-slide__img
                                        img(src="../img/about/about-1.jpg" alt="@@")
                                .swiper-slide
                                    .swiper-slide__img
                                        img(src="../img/about/about-1.jpg" alt="@@")
                                .swiper-slide
                                    .swiper-slide__img
                                        img(src="../img/about/about-1.jpg" alt="@@")

                            .swiper-button-prev
                                svg.icon.clients__list-icon
                                    use(xlink:href="../img/sprite/sprite.svg#next")
                            .swiper-button-next
                                svg.icon.clients__list-icon
                                    use(xlink:href="../img/sprite/sprite.svg#next")
                            .swiper-pagination
